# ============================================================================
# GAX (Transaction System) - Environment Configuration
# ============================================================================

# Django Core Settings
SECRET_KEY=your-super-secret-django-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/gax_db

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# INTER-SERVICE COMMUNICATION
# ============================================================================

# Shared Security Keys (MUST match across all services)
SHARED_SERVICE_SECRET=your-shared-service-secret-key-min-32-chars-change-this
SHARED_JWT_SECRET=your-shared-jwt-secret-key-min-32-chars-change-this
WEBHOOK_SECRET=your-webhook-hmac-secret-key-min-32-chars-change-this

# Service URLs - Local Development
CREATE_API_URL=http://localhost:8000
TRINITY_API_URL=http://localhost:8002
GAXTRON_API_URL=http://localhost:8003

# Service URLs - Production
# CREATE_API_URL=https://elibrary.yoursite.com
# TRINITY_API_URL=https://escrow.yoursite.com
# GAXTRON_API_URL=https://blockchain.yoursite.com

# ============================================================================
# PAYMENT GATEWAY INTEGRATION
# ============================================================================

# Moniepoint Configuration (for deposits)
MONIEPOINT_SANDBOX_BASE_URL=https://sandbox.moniepoint.com
MONIEPOINT_SANDBOX_API_KEY=your-sandbox-api-key
MONIEPOINT_SANDBOX_SECRET_KEY=your-sandbox-secret-key
MONIEPOINT_SANDBOX_CONTRACT_CODE=your-contract-code

# Production Moniepoint (uncomment for production)
# MONIEPOINT_LIVE_BASE_URL=https://api.moniepoint.com
# MONIEPOINT_LIVE_API_KEY=your-live-api-key
# MONIEPOINT_LIVE_SECRET_KEY=your-live-secret-key
# MONIEPOINT_LIVE_CONTRACT_CODE=your-live-contract-code

# Bill Payment API
BILL_PAYMENT_API_URL=https://api.billpayment.com
BILL_PAYMENT_API_KEY=your-bill-payment-api-key

# ============================================================================
# BLOCKCHAIN INTEGRATION
# ============================================================================

# C++ Blockchain Library Path
BLOCKCHAIN_LIB_PATH=/path/to/gax_blockchain.so
BLOCKCHAIN_DIFFICULTY=4
BLOCKCHAIN_MINING_REWARD=50.0

# ============================================================================
# TRANSACTION SETTINGS
# ============================================================================

# Premium Activation
SELLER_PREMIUM_FEE=5000.00

# Transaction Limits
MAX_WITHDRAWAL_AMOUNT=1000000.00
MIN_WITHDRAWAL_AMOUNT=100.00
MAX_TRANSFER_AMOUNT=500000.00
MIN_TRANSFER_AMOUNT=10.00

# Fees
WITHDRAWAL_FEE_PERCENTAGE=1.5
TRANSFER_FEE_FLAT=10.00

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/gax/app.log
