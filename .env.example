# Environment Configuration Template
# Copy this to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/gax_banking
DB_NAME=gax_banking
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# Moniepoint - Sandbox
MONIEPOINT_SANDBOX_BASE_URL=https://sandbox.moniepoint.com
MONIEPOINT_SANDBOX_API_KEY=your-sandbox-api-key
MONIEPOINT_SANDBOX_SECRET_KEY=your-sandbox-secret-key
MONIEPOINT_SANDBOX_CONTRACT_CODE=your-sandbox-contract-code

# Moniepoint - Live
MONIEPOINT_LIVE_BASE_URL=https://api.moniepoint.com
MONIEPOINT_LIVE_API_KEY=your-live-api-key
MONIEPOINT_LIVE_SECRET_KEY=your-live-secret-key
MONIEPOINT_LIVE_CONTRACT_CODE=your-live-contract-code

# Bill Payment API
BILL_PAYMENT_API_URL=https://api.billpayment.com
BILL_PAYMENT_API_KEY=your-bill-payment-api-key

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Sentry (Error tracking)
SENTRY_DSN=your-sentry-dsn

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=1440  # minutes (1 day)

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
